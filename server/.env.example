# Neon Serverless PostgreSQL Database Configuration
# Get your connection string from https://console.neon.tech
DATABASE_URL='postgresql://username:password@ep-xxxxx-pooler.region.aws.neon.tech/database?sslmode=require&channel_binding=require'

# For local development, use:
# LOCAL_DATABASE_URL='postgresql://postgres:password@localhost:5432/trusthire'

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Admin Credentials (Change these in production!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPassword@123

# Default Test User Credentials
USER_NAME=testuser
USER_EMAIL=test@example.com
USER_PASSWORD=password123

# Email Configuration (SMTP for OTP)
# Gmail Setup: Enable 2FA and generate App Password at https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password_from_gmail
SMTP_FROM="TrustHire <no-reply@trusthire.com>"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
# Optional: the 'from' address shown in outgoing emails (defaults to SMTP_USER)
SMTP_FROM="TrustHire <no-reply@yourdomain.com>"

# SMS Configuration (Twilio) - For OTP Delivery via SMS
# Sign up at: https://www.twilio.com/
# Get your Account SID, Auth Token, and assign a phone number
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
# Phone numbers should include country code, e.g. +919999999999

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Admin Configuration
ADMIN_EMAIL=admin@trusthire.com
ADMIN_PASSWORD=admin123456
